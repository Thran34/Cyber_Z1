@model Cyber_Z1.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Usuń Użytkownika";
}

<h2>Usuń Użytkownika</h2>

<h3>Czy na pewno chcesz usunąć tego użytkownika?</h3>
<div>
    <h4>@Model.Username</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Pełna Nazwa</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Rola</dt>
        <dd class="col-sm-10">@(Model.IsAdmin ? "Administrator" : "Użytkownik")</dd>
    </dl>
</div>

<form asp-action="DeleteUser" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
