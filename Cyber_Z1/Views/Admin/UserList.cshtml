@model IEnumerable<Cyber_Z1.Models.ApplicationUser>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                <a asp-action="BlockUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Block</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="AddUser" class="btn btn-success">Add New User</a>
